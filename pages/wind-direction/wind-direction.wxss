.container {
  padding: 31rpx 19rpx 20rpx 21rpx;
}

.wind-direct {
  height: 126rpx;
  background: rgba(16, 41, 87, 1);
  border-radius: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 31rpx 0 29rpx;
}

.wind-direct .wind-name {
  height: 59rpx;
  font-size: 42rpx;
  font-weight: 500;
  color: rgba(21, 252, 113, 1);
  line-height: 59rpx;
}

.wind-direct .wind-name .sub-name {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}

.wind-direct .update-time {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(56, 80, 118, 1);
  line-height: 33rpx;
}

.wind-log {
  width: 710rpx;
  background: rgba(16, 41, 87, 1);
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.wind-log .wind-log-title {
  height: 108rpx;
  padding-left: 30rpx;
  display: -webkit-flex;
  align-items: center;
}

.wind-log .wind-log-title .operate-name {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(21, 233, 252, 1);
  line-height: 40rpx;
}
.wind-log .divede-border {
  width:650rpx;
  height:1rpx;
  margin: 0 auto;
  background:rgba(0,20,52,1);
}

.control-detail {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.cell-circle {
  width: 12rpx;
  height: 12rpx;
  margin-left: 31.5rpx;
  background-color: rgba(21, 233, 252, 1);
  border-radius: 50%;
}

.border-item {
  height: 170rpx;
  border-left: 2px solid #2E4973;
  margin-left: 35rpx;
}

.log-wrapper {
  width: 604rpx;
  height: 140rpx;
  box-sizing: border-box;
  background: rgba(0, 20, 52, 1);
  border-radius: 10px;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
  padding: 30rpx;
  color: #456EAD;
}

.log-wrapper .log-time {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
}

.log-wrapper .log-status {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
  color:#8BABE7;
}
