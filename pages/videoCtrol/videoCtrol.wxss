/* pages/videoCtrol/videoCtrol.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #102957;
}
.grid{
    width:100%;
    height:30rpx;
    background:#001434;
}
.videotit{
    padding:0 20rpx;
    display:flex;
    display:-webkit-flex;
    justify-content:space-between;
    align-items: center;
    flex-flow:row nowrap;
    height:90rpx;
    line-height:90rpx;
    font-size:30rpx;
    color:#15E9FC;
}
.videotit>.devicetit{
    max-width: 40%;
}
.videotit .plot{
    color:#395787;
    font-size:24rpx;
    height:40rpx;
    line-height:40rpx;
    border-radius:20rpx;
    background: #0B224A;
    padding:0 16rpx;
    max-width: 35%;
}
.hole_video,#myVideo{
    width:100%;
    height: 422rpx;
    position:relative;
}
.hole_video .videoctrol{
    width:100%;
    position:absolute;
    left:0;
    bottom:15rpx;
    z-index:99;
    padding:0 15rpx; 
    box-sizing:border-box;
}
.hole_video .videoctrol,.hole_video .videoctrol .right_ctrol{
    display:flex;
    display:-webkit-flex;
    justify-content: space-between;
    align-items: center;
    flex-flow:row nowrap;
}
.hole_video .videoctrol .right_ctrol view{
    justify-content:flex-start;
    margin-left: 23rpx;
}
.videoctrol .playbtn,.videoctrol .ctrolbtn,.videoctrol .fullscreen{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 100%;
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(0,0,0,.5)
}
.videoctrol .ctrolbtn{
    background:#2ED5E0;
}
.posterImg{
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: 50;
  background-image: url(https://zaiot.oss-cn-hangzhou.aliyuncs.com/wechat/img/video_poster.png);
  background-repeat: no-repeat;
  background-size: cover;
}
.iconLoad{
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -30rpx;
    margin-top: -30rpx;
    z-index: 77;
}