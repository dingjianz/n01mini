<!-- 手机号登录页 -->
<view class="logo">
  <view class='title'>左岸物联网</view>
</view>
<form bindsubmit="formSubmit">
  <view class='form-item'>
    <input type="number" name="phone" maxlength="11" placeholder="请输入在农场预留的手机号" value="{{formData.phone}}" bindinput="getPhone"/>
  </view>
   <view class='form-item'>
    <input type="number" class='vcode' name="msgCode" maxlength="4" placeholder="请输入验证码" bindinput="vCode"/>
    <view class='code-btn {{canClick1&&baseCount === 60?"":"disable"}}' catchtap='getCode'>{{baseCount === 60?'获取验证码':'重新获取（'+baseCount+'s）'}}</view>
   </view>
   <view class='login'><button formType='submit' class='{{canClick2?"":"disable"}}'>登录</button></view>
</form>
