/* pages/member-detail/member-detail.wxss */
.member-panel{
  width: 710rpx;
  height: 180rpx;
  box-sizing: border-box;
  background-color: #102957;
  border-radius: 10rpx;
  margin: 30rpx auto 90rpx;
  display: flex;
  align-items: center;
  padding: 30rpx;
}
.member-panel .panel-pic{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  border: 0 none;
}
.member-panel .panel-prefix{
  flex: 1;
  padding-left: 30rpx;
  font-size: 34rpx;
  color: #8BABE7;
  height: 48rpx;
  line-height: 48rpx;
  font-weight: 500;
}
.member-panel .panel-suffix{
  font-size: 26rpx;
  color: #456EAD;
  height: 37rpx;
  line-height: 37rpx;
  font-weight: 400;
} 
.f-button{
  margin: 30rpx auto 0;
  width: 710rpx;
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 400rpx;
  padding: 0;
}
.f-button::after{
  border: 0 none
}
.f-button.change-role-btn{
  background-color: #102957;
  color: #25538E;
}
.f-button.delete-role-btn{
  background-color: #0E244C;
  color: #6F1E1E;
}