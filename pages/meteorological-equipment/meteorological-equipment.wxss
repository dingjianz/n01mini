.container {
  padding: 31rpx 19rpx 20rpx 21rpx;
}

.euip-wrapper {
  background: rgba(16, 41, 87, 1);
  border-radius: 10rpx;
  padding: 28rpx 21rpx 20rpx 19rpx;
}

.euip-wrapper .equip-title {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}

.euip-wrapper .equip-title {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}
.euip-wrapper .equip-title .equip-des{
  margin-right: 60rpx;
  width: 570rpx;
  display: flex;
  display: -webkit-flex;
  align-items: flex-end;
}

.euip-wrapper .equip-title .euip-name {
  display: inline-block;
  height: 42rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(21, 233, 252, 1);
  box-sizing: border-box;
  max-width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.euip-wrapper .equip-title .euip-basePosition {
  display: inline-block;
  height: 38rpx;
  text-align: center;
  background: rgba(11, 34, 74, 1);
  border-radius: 19rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(57, 87, 135, 1);
  margin-left: 10rpx;
  vertical-align: middle;
  padding: 0 15rpx;
  box-sizing: border-box;
  max-width: 260rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.euip-wrapper .equip-title .iconshezhi {
  font-size: 36rpx;
  color: #314C75;
}

/* EC值列表 */

.enumValue{
  /* 枚举型 传感器 显示 */
  max-width:150rpx;
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #15FC71
}

.euip-wrapper .ec-value .val-wrapper {
  width: 320rpx;
  height: 130rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(39, 63, 100, 1);
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
}
.euip-wrapper .ec-value .val-wrapper:nth-child(2n){
  margin-right: 0;
}

.euip-wrapper .ec-value .val-wrapper .val-name {
  line-height: 40rpx;
  font-size: 26rpx;
  color: #8BABE7;
  max-width: 100%;
}

.euip-wrapper .ec-value .val-wrapper .val-unit {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(21, 252, 113, 1);
  line-height: 33rpx;
  margin-left: 10rpx;
}

/* 设备开关 */
.euip-switch-list .euip-switch-item {
  width: 670rpx;
  height: 120rpx;
  box-sizing: border-box;
  border: 1rpx solid rgba(39, 63, 100, 1);
  border-radius: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.euip-switch-list .euip-switch-item .switch-name {
  height: 40rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(139, 171, 231, 1);
  line-height: 40rpx;
  max-width: 230rpx;
}
.euip-switch-list .euip-switch-item .switch-onoff {
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.euip-switch-list .euip-switch-item .switch-onoff .iconjiantou{
  font-size: 26rpx;
  color:#354E75;
  padding-left: 35rpx;
  margin-right: -14rpx;
}

/* 数值型控制器 */
.controlTemp{
  min-width: 202rpx;
  height:80rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  border-radius: 80rpx;
  border: 1rpx solid #1E3C73;
  padding: 0 20rpx 0 30rpx;
  background-color: #001434;
  box-sizing: border-box;
}
.controlTemp>.iconfont{
  font-size: 24rpx;
  width: 30rpx;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  border: 1rpx solid #30E034;
  color: #30E034;
  border-radius: 100%;
  margin-left: 25rpx;
}
/* 数值型控制器弹窗 */
.modelInput{
  width: 340rpx;
  height: 80rpx;
  border: 2rpx solid #294166;
  border-radius: 8rpx;
  margin: 5rpx auto 11rpx;
  text-align: center;
  color: #15E9FC;
  font-size: 32rpx;
  box-sizing: border-box;
}
.rangeInput{
  text-align: center;
  color: #395787;
  font-size: 24rpx;
}

.ques_tit{
  text-align: center;
  padding-bottom: 20rpx;
  color: #7696D3;
  font-size: 32rpx;
}

.opeate_text{
  font-size: 24rpx;
  text-align: right;
  color: #15FC71; /* 默认颜色为“操作成功” */
}
.opeate_text.doing{
  color: #32A0FE
}
.opeate_text.failed{
  color: #FE5250
}
.opeate_text.offline{
  color: #FCAD15
}