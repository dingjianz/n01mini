.container {
  height: 100vh;
  padding: 30rpx 20rpx;
  color: #385076;
  font-size: 24rpx;
}

.part_a {
  height: 350rpx;   
  box-sizing: border-box;
  background: #102957;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.part_a .title {
  height: 70rpx;
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-end;
}


.part_a .title .left {
  display: flex;
  display: -webkit-flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 30rpx;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.part_a .title .iconshezhi {
  font-size: 36rpx;
  margin-right: 19rpx;
}

.part_a .title image {
  width: 50rpx;
  height: 50rpx;
}

.part_a .title .equiptit {
  color: #15E9FC;
  font-size: 30rpx;
  margin-right: 8rpx;
}

.part_a .title .area {
  background: #0B224A;
  height: 38rpx;
  line-height: 38rpx;
  border-radius: 19rpx;
  padding: 0 15rpx;
  color: #395787;
  font-size: 24rpx;
}

.part_a .indicator {
  height: 284rpx;
  box-sizing: border-box;
  padding-top: 41rpx;
}
.part_a .indicator .line {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  flex-flow: row nowrap;
  height: 160rpx;
  box-sizing: border-box;
}

.part_a .indicator .card {
  min-width:360rpx;
  height: 160rpx;
  border: 2rpx solid #273F64;
  box-sizing: border-box;
  border-radius: 10rpx;
}

.part_a .indicator .wrap {
  width: 100%;
  height:100%;
  color: #15FC71;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
  flex-flow: column;
  box-sizing: border-box;
  padding: 0 15rpx;
}
.part_a .indicator .wrap .iconfont-box{
  width: 100%;
  height:73rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: flex-end;
}


.part_a .indicator .num {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 45rpx;
}

.part_a .indicator .unit {
  font-size: 26rpx;
}

.part_a .indicator .name {
  height: 40rpx;
  margin-top: 19rpx;
  font-size: 26rpx;
  max-width: 330rpx;
  overflow-x: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.part_a .indicator .update {
  height: 83rpx;
  line-height: 83rpx;
  font-size: 24rpx;
  color: #344B70;
  text-align: center;
}

.part_b {
  height: calc(100% - 380rpx);
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #102957;
}
.part_b.IPX{
  height: calc(100% - 448â€¬rpx);
}
.part_b .opts {
  box-sizing: border-box;
  color: #15E9FC;
  height: 88rpx;
  font-size: 26rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: row nowrap;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #001434;
}

.part_b .opts .opts-left {
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.part_b .optitem {
  min-width: 102rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  margin-right: 10rpx;
}
.part_b .optitem:last-child{
  margin-right: 0;
}

.part_b .optitem.active {
  background: #001434;
}

.part_b .opts .opts-right {
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content:flex-end;
}

.part_b .opts .opts-right .optitem.active {
  padding: 0 20rpx;
}

.part_b .opts .opts-right text {
  margin-top: -60rpx;
  display: inline-block;
}

.part_b .echart {
  width: 100%;
  height:610rpx;
  position: relative;
}
.echartInner{
  width: 100%;
  height: 0;
  overflow: hidden;
}
.part_b ec-canvas {
  width: 100%;
  height: 610rpx;
}

.no-data-ww{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}