.custom-cell-group .custom-cell:after{
    height: 100%;
    width: 680rpx;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    box-sizing: border-box;
    border-bottom: 1rpx solid #001434;
}
.custom-cell-group .custom-cell .cell-title .remarks{
    width: 44rpx;
    height: 44rpx;
    border-radius: 22rpx;
    background-color: #091F44;
    line-height: 44rpx;
    text-align: center;
}
.f-button{
    display: block;
    height: 110rpx;
    margin: 0 auto 0;
    box-sizing: border-box;
    background: #102957;
    color: #456EAD;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 110rpx;
    border: 0 none;
    padding: 0;
}
.f-button::after{
    border: 0 none;
}
.f-button .iconfont{
    font-size: 32rpx;
    vertical-align: middle
}
.f-input-label{
  width: 400rpx;
  height: 80rpx;
  margin: 0 auto;
  box-sizing: border-box;
  border: 1rpx solid #294166;
  background-color: transparent;
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  border-radius: 8rpx;
  margin-bottom: 23rpx;
}
.f-input-label .f-input{
  flex: 1;
  font-size: 26rpx;
  line-height: 50rpx;
  height: 50rpx;
  display: block;
  color: #15E9FC;
  border: 0 none;
  outline: none;
  background-color: transparent;
}
.f-input-label .f-input .f-input-placeholder{
  color: #3F639C;
}