.container {
  height: 100vh;
  padding: 30rpx 20rpx;
  color: #385076;
  font-size: 24rpx;
}
.container.IPX {
  padding: 30rpx 20rpx 43rpx 20rpx;
}

.rain-direct {
  height: 126rpx;
  background: rgba(16, 41, 87, 1);
  border-radius: 10rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 31rpx 0 29rpx;
}

.rain-direct .rain-name {
  height: 59rpx;
  font-size: 42rpx;
  font-weight: 500;
  color:#15FC71;
  line-height: 59rpx;
  display: flex;
  display: -webkit-flex;
  align-items: baseline;
}

.rain-direct .rain-name .sub-name {
  height: 37rpx;
  font-size: 26rpx;
  font-weight: 400;
  line-height: 37rpx;
  padding-left: 15rpx;
  color:#15FC71;
}

.rain-direct .update-time {
  height: 33rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(56, 80, 118, 1);
  line-height: 33rpx;
}


/* 折线图 */
.part_b {
  margin-top: 30rpx;
  height: calc(100% - 156rpx);
  box-sizing: border-box;
  border-radius: 10rpx;
  background: #102957;
}
.part_b.IPX{
  height: calc(100% - 224rpx);
}
.part_b .opts {
  box-sizing: border-box;
  color: #15E9FC;
  height: 88rpx;
  font-size: 26rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  flex-flow: row nowrap;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #001434;
}

.part_b .opts .opts-left {
  box-sizing: border-box;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}

.part_b .optitem {
  min-width: 102rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  text-align: center;
  margin-right: 10rpx;
}
.part_b .optitem:last-child{
  margin-right: 0;
}

.part_b .optitem.active {
  background: #001434;
}

.part_b .opts .opts-right {
  /* box-sizing: border-box; */
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content:flex-end;
}

.part_b .opts .opts-right .optitem.active {
  padding: 0 20rpx;
}

.part_b .opts .opts-right text {
  margin-top: -60rpx;
  display: inline-block;
}

.part_b .echart {
  width: 100%;
  height:610rpx;
  position: relative;
}
.part_b ec-canvas {
  width: 100%;
  height: 100%;
}

.no-data-ww{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}