/* pages/user/user.wxss */
@import "../../assets/default-skin/cell.wxss";
.content-container{
    width: 100vw;
    overflow: hidden;
}
.user-info-container{
    height: 204rpx;
    padding-top: 34rpx;
    padding-left: 30rpx;
    position: relative;
    box-sizing: border-box;
}
.user-info-container::after{
    content: '';
    width: 140%;
    height: 238rpx;
    position: absolute;
    left: -20%;
    top: 0;
    z-index: -1;
    border-radius: 0 0 50% 50%;
    background-color: #0B2551;
}
.user-info-container > .user-info .user-icon{
    width: 120rpx;
    height: 120rpx;
    background-color: #09224A;
    border-radius: 60rpx;
    display: inline-block;
}
.user-info-container > .user-info .user-icon .user-pic{
    display: block;
    width: 100%;
    height: 100%;
}
.user-info-container > .user-info .user-phone{
    vertical-align: top;
    display: inline-block;
    margin-top: 20rpx;
    margin-left: 30rpx;
    font-size: 34rpx;
    color: #15E9FC;
    line-height: 48rpx;
}
.user-info-container > .user-setting-btn{
    position: absolute;
    top: 57rpx;
    right: -16rpx;
    display: inline-block;
    width: 126rpx;
    height: 42rpx;
    line-height: 42rpx;
    background-color: #132F63;
    color: #456EAD;
    font-size: 24rpx;
    border-radius: 21rpx;
}
.user-info-container > .user-setting-btn .iconfont{
    font-size: 24rpx;
    display: inline-block;
    /* margin-left: -15rpx;
    margin-right: 5rpx; */
    margin:0 10rpx 0 15rpx;
}
.custom-cell-group{
    margin-top: 48rpx;
}
.custom-cell-group .custom-cell .prefix-icon.iconchengyuanguanli{
    font-size: 30rpx;
}
